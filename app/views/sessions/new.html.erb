<%= form_tag sessions_path, :class => "form-signin" do %>
	<h2>Sign in</h2>
	<%= label_tag :email, nil, :class => "sr-only" %>

	<%= text_field_tag :email, nil, :class => "form-control no-bottom-radius", :placeholder => "Email" %>
	<%= label_tag :password, nil, :class => "sr-only" %>

	<%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password" %>

	<%= submit_tag "Log In",  :class => "btn btn-primary center-block" %>
	<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
<% end %>

