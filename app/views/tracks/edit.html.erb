<%= form_tag track_path(@track.id), method: 'put', :class => "track_drag" do %>
  <%= text_field_tag(:title , @track.name)%>
    <% @checked_courses.each do |course| %>
      <%= check_box_tag("course[#{course.id}]", course.id, checked=true)%>
      <%= label_tag("course[#{course.id}]", course.name)%>
    <%end%>
     <% @all_courses.each do |course| %>
      <%= check_box_tag("course[#{course.id}]", course.id)%>
      <%= label_tag("course[#{course.id}]", course.name)%>
    <%end%>
    <%= hidden_field_tag(:position)%>
  <%= submit_tag %>
<%end%>

<div class="container">

  <div id="row_course_selection"  class="row">
  <% @checked_courses.each do |course| %>
    
    <li data-id="<%= course.id %>" class="col-xs-6 col-md-3">
        <div class="thumbnail course_box">
          <div><%= course.name %></div>
          <div>
          rating <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i>
          </div>
          <div>
          difficulty <i class="fa fa-rocket rocket"></i> <i class="fa fa-rocket rocket"></i> <i class="fa fa-rocket rocket"></i>
          </div>
        </div>
      </li>

  <% end %>
   
  </div>

  <div id="sidebar_course_choices" class="sidebar">
   <% @all_courses.each do |course| %>
       <li data-id="<%= course.id %>" class="col-xs-12 col-md-12">
        <div class="thumbnail course_box">
          <div><%= course.name %></div>
          <div>
          rating <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i>
          </div>
          <div>
          difficulty <i class="fa fa-rocket rocket"></i> <i class="fa fa-rocket rocket"></i> <i class="fa fa-rocket rocket"></i>
          </div>
        </div>
      </li>
   <% end %>
    
   
  </div>

</div>
