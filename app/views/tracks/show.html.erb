<div ng-app="trackApp">
  <h1><%= @track.name%></h1>
  <i> by <%=@track.owner.username%>, taken by <%=@count%> users </i>
  <%= link_to 'Fork', "/tracks/#{@track.id}/follow", method: 'post'%>
  <div ng-controller="coursesCtrl">
    <input type="text" ng-model="search" placeholder="Search course">
    <ul>
        <div ng-repeat="course in courses | filter:search" class="course-box">
          <div class="course-box" style="border: 5px solid {{course.color}};margin-bottom:10px;">
            <a href="{{course.url}}" target="_blank">{{course.name}}</a>
            <span><%= link_to 'âœ“', '/courses/{{course.id}}/check', method: 'post' %></span>
            <span><%= link_to 'X', '/courses/{{course.id}}/uncheck', method: 'post' %></span>
          </div>
        </div>
    </ul>
  </div>