<h2><%= "#{@user.name}'s Tracks" %></h2>


<div class="row"><%@user.tracks.each do |track|%>
  <div class="col-xs-12 col-md-12 track_prog">
    <h4><%= link_to "#{track.name}", track_path(track.id) %></h4>
    <i> <%= track.description%></i>
    <div class="progress">
      <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=@user.progress(track.id)%>%;">
        <span><%=@user.progress(track.id).to_i%>%</span>
      </div>
     </div>
        <% if track.children.length > 0 %>
        <h4 style="text-align: center">Forks</h4>
        <% track.children.each do |child| %>
          <div class="forked">
            <%=link_to child.name, child%>
            <p><i>forked by <%=link_to child.owner.name, child.owner%></i><p>
          </div>
          <% if child.children.length> 0%>
            <% child.children.each do |grandchild| %>
              <div class="forked">
                <%=link_to grandchild.name, grandchild%>
                <p><i><%=link_to grandchild.owner.name, grandchild.owner%></i><p>
              </div>
            <%end%>
          <%end%>
        <%end%>
        <%end%>
    </div>
    <% end %>
  </div>
